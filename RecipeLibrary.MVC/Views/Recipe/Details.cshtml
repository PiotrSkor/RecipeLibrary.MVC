@model RecipeLibrary.Domain.Entities.RecipeDetails


@{
    ViewData["Title"] = "Details";

}

<h1>@Model.Name</h1>
@using (Html.BeginForm("Delete", "Recipes", new { encodedName = Model.EncodedName })) {
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionShort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionShort)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionLong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionLong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <h3>Ingredients</h3>

        @foreach (var item in Model.Ingredients)
        {
            @if (item.Value != 0)
            {
                <div>
                    <hr />
                    <div><strong>Name:</strong> @item.NameIng</div>
                    <div><strong>Value:</strong> @item.Value.ToString().Replace(",",".").Replace(".0","") @item.Type</div>
                    <hr />
                </div>
            }
        }
    </dl>
</div>
}
<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
    <a class="btn btn-primary" href="/Recipe/Delete?encodedName=@Model.EncodedName&descriptionShort=@Model.DescriptionShort" type="submit" value="Delete" onclick="return confirm('Are u sure?')">Delete</a>
</div>

